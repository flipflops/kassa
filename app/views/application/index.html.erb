<% if user_signed_in? %>
  <div ng-app='Kassa'>
    <nav ng-controller="NavigationCtrl">
      <a ng-click="goToHome()">Ostosivu</a>
      <a ng-show="canManageProducts()" ng-click="goToProductManagement()">Tuotehallinta</a>
      <a ng-show="canManageUsers()" ng-click="goToUserManagement()">Käyttäjähallinta</a>
      <%= link_to I18n.t('devise.sessions.sign_out'), destroy_user_session_path, {:method => :delete}  %>
    </nav>
    <div ng-view></div>
  </div>
  <%= javascript_include_tag "application" %>
  <script type="text/javascript">
    I18n.defaultLocale = "<%= I18n.default_locale %>";
    I18n.locale = "<%= I18n.locale %>";
  </script>

<% end %>