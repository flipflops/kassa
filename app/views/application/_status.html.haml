  %i.icon-ok
%alert.alert.alert-error{'ng-show'=>"#{prefix}status == 'update_failure'"}
  = t('.update_failure')
  %i.icon-warning-sign
%alert.alert.alert-info{'ng-show'=>"#{prefix}status == 'nothing_changed'"}
  = t('.nothing_changed')
%alert.alert.alert-info{'ng-show'=>"#{prefix}.status == 'unsaved_changes'"}
