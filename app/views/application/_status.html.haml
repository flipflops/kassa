%alert.alert.alert-success{'ng-show'=>"#{prefix}status == 'create_success'"}
  = t('.create_success')
  %i.icon-ok
%alert.alert.alert-error{'ng-show'=>"#{prefix}status == 'create_failure'"}
  = t('.create_failure')
  %i.icon-warning-sign
%alert.alert.alert-success{'ng-show'=>"#{prefix}status == 'update_success'"}
