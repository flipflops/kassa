<div id="buyers">
  <h2><%= t('user.other') %></h2>
  <table>
    <thead>
    <tr>
      <th><%= t('user.username') %></th>
      <th><%= t('user.buy_count') %></th>
      <th><%= t('user.balance') %></th>
    </tr>
    </thead>
    <tbody>
    <% @users.each do |user| %>
      <tr data-id="<%= user.id %>">
        <td><%= user.username %></td>
        <td><%= user.buy_count %></td>
        <td><%= user.balance %></td>
        <td><%= link_to t('user.select_as_buyer', :name => user.username), new_buy_path(:buyer => user.id)%></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>