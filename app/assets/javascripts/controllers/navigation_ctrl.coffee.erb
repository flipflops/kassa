angular.module('kassa').controller('NavigationCtrl', [
  '$scope'
  '$location'
  'SessionService'
  ($scope, $location, Session)->
    ensureRootSlash = (route)->
      if route.charAt(0) == '/' then route else ('/' + route)

    isCurrent = (route)->
      ensureRootSlash(route) == $location.path()

    $scope.session = Session
    $scope.isCurrent = isCurrent
])